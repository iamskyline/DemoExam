<Window x:Class="RequestsManagement.AppWindows.MechanicWindows.NewRepairPartsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RequestsManagement.AppWindows.MechanicWindows"
        mc:Ignorable="d"
        Title="Окно добвления новых запчастей к заявке"
        Height="200" Width="500"
        MinHeight="200" MinWidth="500"
        MaxHeight="200" MaxWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Добавление новых запчастей"
               FontSize="24"
               HorizontalAlignment="Center"
        />
        <StackPanel Grid.Row="1">
            <TextBox x:Name="repairPartsTextBox"
                     MinHeight="30"
                     MaxHeight="30"
                     FontSize="16"
                     Margin="20"
            />
            <Button x:Name="saveButton"
                    Content="Сохранить"
                    FontSize="18"
                    MinHeight="30"
                    MaxWidth="300"
                    Click="SaveButton_OnClick"
            />
        </StackPanel>
    </Grid>
</Window>
